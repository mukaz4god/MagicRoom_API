@model MagicHouse.Models.VM.RoomNumberCreateVM

<form asp-action="CreateRoomNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Room</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="RoomNumber.RoomNo" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="RoomNumber.RoomNo" class="form-control" />
                <span asp-validation-for="RoomNumber.RoomNo" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="RoomNumber.HouseID" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="RoomNumber.HouseID" class="form-select" asp-items="@Model.HouseList">
                    <option disabled selected>--Select Room--</option>
                </select>
                <span asp-validation-for="RoomNumber.HouseID" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="RoomNumber.SpecialDetails" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="RoomNumber.SpecialDetails" class="form-control" rows="5"></textarea>
                <span asp-validation-for="RoomNumber.SpecialDetails" class="text-danger"></span>
            </div>
           
            <div class="col-5 offset-2">
                <a asp-action="IndexRoomNumber" asp-controller="RoomNumber" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}